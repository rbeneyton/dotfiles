# [[[ tmux

    # Predictable SSH authentication socket location for tmux
    SOCK="/tmp/ssh-agent-$USER-screen"
    export SSH_AUTH_SOCK=$SOCK
    # pass key as optional argument
    function tmuxssh-add() {
        rm -f $SSH_AUTH_SOCK
        pkill -U $USER --signal SIGKILL ssh-agent
        ssh-agent -a $SSH_AUTH_SOCK
        ssh-add "$@"
    }
    alias tmuxa='tmux -2 att -d -t'
    alias tmuxl='tmux ls'
    alias tmuxn='tmux -2 new -s'
    function tmuxd {
        tmux select-layout even-vertical 1>/dev/null 2>/dev/null
        tmux split-window
        sleep 1 # perfectibleâ„¢
        tmux send-keys "$@"
        tmux send-keys 'C-m'
    }
    # tmux aware pstree (with sessions/windows/pane info)
    function tmuxps {
        while IFS='=' read -r pane_prefix pane_pid
        do
            pstree -a -l --hide-threads -U -p $pane_pid | sed -e "/,$pane_pid/d" -e "/pstree,/d" -e "/sed,/d" -e "s@^@$pane_prefix@"
        done < <(tmux list-panes -a -F '#{session_name} #{window_name} #{window_index}.#{pane_index} =#{pane_pid}' | column -t)
    }

# ]]]
# [[[ git

    alias g='git'

    alias gem='${EDITOR} $(git status --ignore-submodules --porcelain | grep --color=no "^[ M]M" | trs | cut -d" " -f2)'
    alias ges='${EDITOR} $(git status --ignore-submodules --porcelain | grep --color=no "^M" | trs | cut -d" " -f2)'
    alias ge='${EDITOR} $(git status --ignore-submodules --porcelain | grep --color=no "^[ M][ M]" | trs | cut -d" " -f2)'
    alias gep='${EDITOR} $(git show --pretty="format:" --name-only)'

    alias t='tig --date-order -500'

    # go to the upper git repo head (returned value is correct)
    function up() {
        export B=$(pwd)
        export A=$(pwd)
        while git rev-parse --show-toplevel 1> /dev/null 2> /dev/null
        do
            export A=$(git rev-parse --show-toplevel 2> /dev/null)
            cd $(dirname $A)
        done
        cd $A
        unset A
        # fail is outside a git repo
        git rev-parse --show-toplevel 2> /dev/null || (cd $B ; false)
    }

    alias gl='git logp -10'
    alias gll='git logp -25'
    alias glll='git logp -50'
    alias gllll='git logp -87'

    alias gs='git st'
    alias gv='git v'
    alias ga='git add'
    alias gc='git commit'
    alias ggr='git gr'
    alias tempo='git commit -m tempo -a'
    # flat list of branches, for using in scripts
    alias gbr='git branch | sed "s/\*//" | sed "s/^\s*//"'

# ]]]
# [[[ editor

    if [[ -r "${HOME}/utils/neovim_install/bin/nvim" ]]
    then
        export EDITOR=${HOME}/utils/neovim_install/bin/nvim
        export MANPAGER='nvim +Man!'
        alias vim=$EDITOR
        alias vimdiff='nvim -d'
    else
        export EDITOR='vim'
        export MANPAGER="/bin/sh -c \"unset PAGER;col -b -x | vim -R -c 'set ft=man nomod nolist nonumber norelativenumber readonly' -c 'map q :q<CR>' -c 'map <SPACE> <C-D>' -\""
    fi
    alias v='$EDITOR '
    alias va='$EDITOR ~/dotfiles/start.txt'
    alias vr='$EDITOR -R'
    # open closest upper obsession session
    function vs() {
        export A=$(pwd)
        while [ "$PWD" != "/" ]
        do
            if [[ -r Session.vim ]]
            then
                $EDITOR -S Session.vim
                cd $A
                return
            fi
            cd ..
        done
        cd $A
        false
    }
    alias vl='$EDITOR -S ~/.cache/session.vim'
    # sun mgmt
    alias theme_light='export theme="light"'
    alias theme_dark='unset theme'
    alias vimlight="theme='light' $EDITOR"
    alias manlight="theme='light' man"

# ]]]

